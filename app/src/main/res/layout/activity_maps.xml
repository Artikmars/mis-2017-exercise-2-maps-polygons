<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.artam.mapspolygons.MapsActivity">


<fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.artam.mapspolygons.MapsActivity"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="140dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:hint="@string/your_location"
        android:inputType="textPersonName"
         />

    <Button
        android:id="@+id/startPolBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:onClick="startPolygon"
        android:text="@string/start_polygon"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<Button
        android:id="@+id/clrMarkersbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClearMarkers"
        android:text="@string/clear_map"
        android:layout_marginRight="22dp"
        android:layout_alignBaseline="@+id/startPolBtn"
        android:layout_alignBottom="@+id/startPolBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp" />


</RelativeLayout>
